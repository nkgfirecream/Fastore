<Window x:Class="Fastore.Core.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="600" Loaded="Window_Loaded">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid Margin="10,10,10,4" Name="grid1" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<ComboBox SelectedIndex="{Binding SelectedColumn, Mode=TwoWay}" Margin="4" MinWidth="120">
				<ComboBoxItem Content="ID" />
				<ComboBoxItem Content="Given" />
				<ComboBoxItem Content="Surname" />
				<ComboBoxItem Content="Gender" />
				<ComboBoxItem Content="Birth Date" />
				<ComboBoxItem Content="Birth Place" />
			</ComboBox>
			<TextBlock Grid.Column="1" Text="Search: " Margin="4"/>
			<TextBox Grid.Column="2" Name="SearchBox" Text="{Binding Criteria, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
		</Grid>
		<DataGrid Grid.Row="1" AutoGenerateColumns="True" MinHeight="20" Margin="10" Name="dataGrid1" MinWidth="150" ItemsSource="{Binding Items}" >
			
		</DataGrid>
	</Grid>
</Window>
